<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.medicino.www.medicino.DoctorSearch">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/searchDoc"
                android:text="ডাক্তার খোজ করুন : "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginBottom="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/specialist"
                android:hint="কোন স্পেশালিষ্ট ডাক্তারকে খুঁজছেন"
                android:gravity="center"
                android:background="@drawable/edit_text_border"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="কোন এলাকার ডাক্তার খুঁজছেন / ডাক্তারের এলাকা "
                android:id="@+id/area"
                android:gravity="center"
                android:background="@drawable/edit_text_border"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ডাক্তারের নাম"
                android:id="@+id/DoctorName"
                android:gravity="center"
                android:background="@drawable/edit_text_border"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gendertext"
                android:text="ডাক্তারের লিঙ্গ / জেন্ডার নির্বাচন করুন"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginBottom="10dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sex"
                android:background="@drawable/edit_text_border"></Spinner>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEND"
                android:onClick="GETDATA"
                android:layout_gravity="center"
                android:id="@+id/SearchSubmit"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp" />

        </LinearLayout>
    </ScrollView>




</RelativeLayout>
