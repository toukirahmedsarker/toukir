<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="NAME:"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:id="@+id/text"
        android:textAppearance="?android:textAppearanceLarge" />

    <TextView
        android:text="Name"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@+id/text"
        android:id="@+id/name"
        android:gravity="center"
        android:layout_toRightOf="@+id/text"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:text="AGE:"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/text"
        android:layout_marginTop="15dp"
        android:id="@+id/textView6"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_toLeftOf="@+id/age"
        android:layout_toStartOf="@+id/age" />

    <TextView
        android:text="Age"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/text"
        android:id="@+id/age"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_toRightOf="@+id/text"
        android:gravity="center"/>

    <TextView
        android:text="SPECIALITY:"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="13dp"
        android:id="@+id/textView8"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:text="speciality"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView8"
        android:id="@+id/specia"
        android:layout_alignRight="@+id/age"
        android:layout_alignEnd="@+id/age"
        android:layout_toEndOf="@+id/textView8"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_toRightOf="@+id/textView8" />

    <TextView
        android:text="FEE:"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="17dp"
        android:id="@+id/textView10"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:text="Fee"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView10"
        android:layout_toRightOf="@+id/textView6"
        android:id="@+id/fee"
        android:layout_alignRight="@+id/specia"
        android:layout_alignEnd="@+id/specia"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center"/>

    <TextView
        android:text="THANA:"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="15dp"
        android:id="@+id/textView12"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:text="Thana"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView12"
        android:layout_toRightOf="@+id/textView10"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/chember"
        android:layout_alignRight="@+id/fee"
        android:layout_alignEnd="@+id/fee"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:text="TIME:"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_marginTop="15dp"
        android:id="@+id/textView14"
        android:layout_toLeftOf="@+id/chember"
        android:layout_toStartOf="@+id/chember"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:text="time"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/textView14"
        android:id="@+id/time"
        android:layout_alignRight="@+id/chember"
        android:layout_alignEnd="@+id/chember"
        android:layout_toRightOf="@+id/textView14"
        android:layout_toEndOf="@+id/textView14"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:text="DAY:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="21dp"
        android:id="@+id/textView16"
        android:layout_alignRight="@+id/textView14"
        android:layout_alignEnd="@+id/textView14"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:text="day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView16"
        android:id="@+id/day"
        android:layout_alignRight="@+id/time"
        android:layout_alignEnd="@+id/time"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_toRightOf="@+id/textView16"
        android:layout_toEndOf="@+id/textView16" />

    <TextView
        android:text="GENDER:"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView16"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginTop="21dp"
        android:id="@+id/textView18"
        android:layout_toLeftOf="@+id/gender"
        android:layout_toStartOf="@+id/gender"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:text="gender"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView18"
        android:id="@+id/gender"
        android:layout_alignRight="@+id/day"
        android:layout_alignEnd="@+id/day"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignLeft="@+id/chember"
        android:layout_alignStart="@+id/chember" />

    <Button
        android:text="ADD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/add"
        android:layout_below="@+id/textView18"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8" />

</RelativeLayout>